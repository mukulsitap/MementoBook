<%- include("../partials/header") %>

<div class="container">
    
    <div style="width: 100%; margin: 0 auto; margin: 5% auto; text-align: center;">
      <h3 style="margin: 0 0 0 4%;">Edit Comment</h3>
   <form action="/postpage/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" style="width: 50%; margin: 0 auto; padding: 2%;">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Comment</label>
    <div class="col-sm-10">
      <input type="text" name="comment[text]" value="<%= comment.text %>" placeholder = "comment" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>
<hr>
     <a href="/postpage/<%= post_id %>">Go back</a>
</div>
