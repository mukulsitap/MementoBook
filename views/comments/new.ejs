<%- include("../partials/header") %>

<div class="container">
    
    <div id="comment-div">
      <h3 style="margin: 0 0 0 9%; padding: 20px;">Add new Comment <%= post.name %></h3>
   <form action="/postpage/<%= post._id %>/comments" method="POST" id="comment-form">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Comment</label>
    <div class="col-sm-10">
      <input type="text" name="comment[text]" placeholder = "comment" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>
     <a href="/postpage/<%= post._id %>">Go back</a>
</div>
<%- include("../partials/footer") %>