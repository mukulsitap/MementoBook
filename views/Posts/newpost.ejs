<%- include("../partials/header") %>

<div class="container">
    
    <div style="width: 100%; margin: 0 auto; margin: 5% auto; text-align: center;">
      <h3 style="margin: 0 0 0 9%;">Create Your Memory</h3>
   <form action="/postpage" method="POST" enctype="multipart/form-data" style="width: 50%; margin: 0 auto; padding: 2%;">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input type="text" name="title" placeholder = "title" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="file" accept="image/*" name="image" placeholder = "image address link" class="form-control" id="inputPassword3" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <textarea name="description" placeholder = "description" class="form-control" id="description" rows="4"> </textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>
<hr>
     <a href="/postpage">Go back</a>
</div>
<%- include("../partials/footer") %>