<%- include("partials/header") %>

    <div class="container">
        
        <div style="width: 100%; margin: 0 auto; margin-top: 4.5%; text-align: center;">
          <h3 style="margin: 0 0 0 9%;">REGISTER FOR NEW ACCOUNT</h3>
          <br>
       <form action="/register" method="post" style="width: 50%; margin: 0 auto;">
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-md-2 col-form-label">UserName</label>
        <div class="col-sm-10">
          <input type="text" name="username"  placeholder ="UserName" class="form-control" id="inputEmail3">
        </div>
      </div>
       <div class="form-group row">
        <label for="inputPassword4" class="col-sm-2 col-md-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" name="email" placeholder="E-mail" class="form-control" id="inputPassword4">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-md-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" name="password" placeholder="password" class="form-control" id="inputPassword3">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </div>
    </form>
    <hr>
    </div>
         <a href="/postpage">Go back</a>
    </div>
<%- include("partials/footer") %>